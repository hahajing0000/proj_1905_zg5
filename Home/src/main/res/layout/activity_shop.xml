<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ShopingTrolleyActivity">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shopingtrolley"
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <CheckBox
            android:id="@+id/cb_shopingtrolley_checkall"
            android:text="全选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
        <TextView
            android:id="@+id/txt_shopingtrolley_sumvalue"
            android:text="合计:0元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:id="@+id/btn_js"
            android:text="立即支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>